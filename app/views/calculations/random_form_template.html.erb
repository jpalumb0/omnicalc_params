<h1>Random Calculation</h1>

<form action="/random/results">
    <div>
        <label for="enter_min">
            Minimum
        </label>
    
        <input id="enter_min" type = "text" name="user_min" placeholder="e.g. 1.5">
    </div>
    
    <div>
        <label for="enter_max">
            Maximum
        </label>
        
        <input id="enter_max" type="text" name = "user_max" placeholder = "e.g. 9.2">
    </div>
    
    
    <button>Pick random number</button>
    
</form>