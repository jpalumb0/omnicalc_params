<h1>Payment Calculation</h1>

<form action="/payment/results">
    <div>
        <label for="enter_apr">
            APR
        </label>
    
        <input id="enter_apr" type = "text" name="user_APR" placeholder="e.g. 5.43">
    </div>
    
    <div>
        <label for="enter_years">
            Number of years
        </label>
        
        <input id="enter_years" type="text" name = "user_term" placeholder = "How many years to repay?">
    </div>
    
    <div>
        <label for="enter_principal">
            Principal
        </label>
        
        <input id="enter_principal" type="text" name = "user_principal" placeholder="How much principal?">
    </div>
    <button>Calculate monthly payment</button>
    
</form>